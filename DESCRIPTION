Package: rofanova
Type: Package
Title: Robust Functional Analysis of Variance
Version: 1.0.0
Authors@R: c(
    person("Fabio", "Centofanti", 
      email = "fabio.centofanti@unina.it", 
      role = c("cre","aut")),
